{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "umd",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../../../../target/classes/umd"
    },
    "filesGlob": [
        "./src/**/*.ts"
    ],
    "files": [
        "./src/java.d.ts",
        "./src/java.ts",
        "./src/junit.d.ts",
        "./src/junit.ts"
    ]
}
