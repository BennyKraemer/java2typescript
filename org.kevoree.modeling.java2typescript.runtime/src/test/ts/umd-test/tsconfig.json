{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../../../../target/test-classes/umd-test"
    },
    "filesGlob": [
        "./**/*.ts",
        "../../../main/ts/umd/src/**/*.d.ts"
    ],
    "files": [
        "./src/test.ts",
        "../../../main/ts/umd/src/java.d.ts",
        "../../../main/ts/umd/src/junit.d.ts"
    ]
}
